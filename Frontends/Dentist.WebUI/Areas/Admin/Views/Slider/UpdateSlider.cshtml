@model UpdateSliderDto
@{
    ViewData["Title"] = "UpdateSlider";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Kaydırıcı Güncelleme Paneli</h4>
        <form method="post" id="updateSliderForm">
            <input type="hidden" asp-for="SliderId" />
            <div class="form-group">
                <div class="card-body">
                    <label for="Name">Başlık 1</label>
                    <input type="text" class="form-control" asp-for="Title1" required>
                </div>
            </div>
            <div class="form-group">
                <div class="card-body">
                    <label for="Name">Başlık 2</label>
                    <input type="text" class="form-control" asp-for="Title2" required>
                </div>
            </div>
            <div class="form-group">
                <div class="card-body">
                    <label for="ImageUrl">Açıklama</label>
                    <textarea cols="25" rows="5" asp-for="Description" class="form-control"></textarea>
                </div>
            </div>
            <br />
            <button type="submit" class="btn btn-primary waves-effect waves-light">
                <i class="fas fa-edit"></i> Güncelle
            </button>
        </form>
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        setupFormSubmitWithAlert('updateSliderForm', 'Başarıyla güncellendi!', 1500);
    });
</script>