@model CreateCategoryCardDto
@{
    ViewData["Title"] = "CreateCategoryCard";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Yeni Kategori Kart Girişi</h4>
        <form method="post" id="createCategoryCardForm">
            <div class="form-group">
                <div class="card-body">
                    <label for="Name">Başlık</label>
                    <input type="text" class="form-control" asp-for="Title" required>
                </div>
            </div>
            <div class="form-group">
                <div class="card-body">
                    <label for="Name">İkon</label>
                    <input type="text" class="form-control" asp-for="Icon" required>
                </div>
            </div>
            <div class="form-group">
                <div class="card-body">
                    <label for="ImageUrl">Açıklama</label>
                    <textarea cols="25" rows="5" asp-for="Description" class="form-control"></textarea>
                </div>
            </div>
            <br />
            <button type="submit" class="btn btn-primary waves-effect waves-light">
                <i class="fas fa-save"></i>  Kaydet
            </button>
        </form>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        setupFormSubmitWithAlert('createCategoryCardForm', 'Başarıyla eklendi!', 2000);
    });
</script>