
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("_AdminLayoutHeadComponentPartial")

<body>
	<div class="wrapper">
		
		@await Component.InvokeAsync("_AdminLayoutSideBarComponentPartial")

		<div class="main">
			<nav class="navbar navbar-expand navbar-light navbar-bg">
				<a class="sidebar-toggle js-sidebar-toggle">
					<i class="hamburger align-self-center"></i>
				</a>

				<div class="navbar-collapse collapse">
					<ul class="navbar-nav navbar-align">

						@await Component.InvokeAsync("_AdminLayoutNotificationsComponentPartial")

						@await Component.InvokeAsync("_AdminLayoutMessageComponentPartial")

						@await Component.InvokeAsync("_AdminLayoutProfileComponentPartial")

					</ul>
				</div>
			</nav>

			<main class="content">
				<div class="container-fluid p-0">

					@RenderBody()

				</div>
			</main>

			@await Component.InvokeAsync("_AdminLayoutFooterComponentPartial")

		</div>
	</div>

	@await Component.InvokeAsync("_AdminLayoutScriptsComponentPartial")

</body>

</html>