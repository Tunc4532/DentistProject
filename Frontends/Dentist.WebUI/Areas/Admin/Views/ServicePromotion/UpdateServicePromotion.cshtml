@model UpdateServicePromotionDto
@{
    ViewData["Title"] = "UpdateServicePromotion";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<div class="card">
    <div class="card-body">
        <h4 class="card-title"> Hizmet Promosyonu Güncelleme Paneli</h4>
        <form method="post" id="updateServicePromotiomForm">
            <input type="hidden" asp-for="ServicePromotionId" />
            <div class="form-group">
                <div class="card-body">
                    <label for="Name">Başlık</label>
                    <input type="text" class="form-control" asp-for="Title" required>
                </div>
            </div>
            <div class="form-group">
                <div class="card-body">
                    <label for="Name">Görsel 1</label>
                    <input type="text" class="form-control" asp-for="Image1" required>
                </div>
            </div>
            <div class="form-group">
                <div class="card-body">
                    <label for="Name">Görsel 2</label>
                    <input type="text" class="form-control" asp-for="Image2" required>
                </div>
            </div>
            <div class="form-group">
                <div class="card-body">
                    <label for="Name">Görsel 3</label>
                    <input type="text" class="form-control" asp-for="Image3" required>
                </div>
            </div>
            <div class="form-group">
                <div class="card-body">
                    <label for="ImageUrl">Açıklama</label>
                    <textarea cols="25" rows="5" asp-for="Description" class="form-control"></textarea>
                </div>
            </div>
            <br />
            <button type="submit" class="btn btn-primary waves-effect waves-light">
                <i class="fas fa-edit"></i> Güncelle
            </button>
        </form>
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        setupFormSubmitWithAlert('updateServicePromotiomForm', 'Başarıyla güncellendi!', 1500);
    });
</script>